{% extends "TaSurveySecurityBundle::layout.html.twig" %}

{% block content %}

<legend>登录</legend>
<form action="{{ path('login_check') }}" method="post" role="form" class="form-horizontal">
    {% if error %}
        <div class="text-danger">错误</div>
    {% endif %}
    <div class="form-group">
        <label for="code" class="col-sm-2 control-label">邮箱:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="code" name="_code">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-primary">登录</button>
          <button type="reset" class="btn btn-default">重置</button>
        </div>
    </div>
</form>
{% endblock %}

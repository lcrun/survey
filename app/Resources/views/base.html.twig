<!DOCTYPE html>
<html>

    <head>
        <meta charset="utf-8">
        <title>{% block title %}{{ site_name }}{% endblock %}</title>

        {% block stylesheets %}
        <link href="{{ asset('bundles/survey/css/main.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ asset('bundles/survey/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
        {% endblock %}

        {% block javascripts %}
        <script src="{{ asset('bundles/survey/js/jquery.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/survey/js/bootstrap.min.js') }}" type="text/javascript"></script>
        <!--[if lt IE 9]>
        <script src="{{ asset('bundles/survey/js/html5shiv.js') }}"></script>
        <![endif]-->
        {% endblock %}
    </head>

    <body>

        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    {% block brand %}{% endblock %}
                </div>

                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        {% block menu %}{% endblock %}
                    </ul>

                    {{ include('::user.html.twig') }}
                </div>
            </div>
        </div>

        <div class="container">

            {% block  messages %}
            {% set messages = app.session.flashbag.get('notice') %}
            {% if messages %}
            <div>
                {% for flashMessage in messages %}
                <p class="text-danger">{{ flashMessage }}</p>
                {% endfor %}
            </div>
            {% endif %}
            {% endblock %}

            {% block content %}{% endblock %}

            <hr>

            <footer>
                &copy;2014
            </footer>

        </div>

    </body>
</html>
